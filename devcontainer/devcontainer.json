{
  "name": "FastAPI (Python)",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && python -m pip install --upgrade pip && pip install -r requirements.txt",
  "forwardPorts": [8000],
  "workspaceFolder": "/workspaces/${localWorkspaceFolder}",
  "remoteUser": "vscode",
  "settings": {
    "python.defaultInterpreterPath": "/workspaces/${localWorkspaceFolder}/.venv/bin/python",
    "terminal.integrated.shell.linux": "/bin/bash"
  }
}
